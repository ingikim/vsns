<% if user_signed_in? %>
  <div class="comments_container">
    <div id='header_of_comments_of_Item_<%= item.id %>' class="show_comments_link <%= item.comments.size > 0 ? 'enabled' : 'disabled' %>">
      <i class="icon-comment-alt"></i> Comments: 
      <small id='count_of_comments_of_Item_<%= item.id %>'>
        <%= item.comments.size %>
      </small>
      <small>
        <%= link_to raw("<i class='icon-plus'></i> Add a comment"), '#', class:'add_a_comment_link', id:"add_a_comment_link_of_Item_#{item.id}" %>
      </small>
    </div> 
    <div id='comments_of_Item_<%= item.id %>' class='comments'>
      <%= render item.comments %>
    </div>
    
    <div id='comment_form_of_Item_<%= item.id %>' class='comment_form_of_item'>
      <%= render 'comments/form', commentable: item %>
    </div>
  </div>
<% end %>